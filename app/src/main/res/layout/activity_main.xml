<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79FFEB3B"
    android:backgroundTint="#FDD835"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_aperte"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="237dp"
        android:layout_height="81dp"
        android:background="#D81B60"
        android:backgroundTint="#D81B60"
        android:clickable="true"
        android:drawableTint="#FDD835"
        android:foregroundTint="#FDD835"
        android:shadowColor="#FDD835"
        android:text="aperte"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textColorLink="#43A047"
        app:iconTint="#FDD835"
        app:layout_constraintBottom_toTopOf="@+id/text_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.703"
        app:rippleColor="#FDD835"
        app:strokeColor="#FDD835" />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="116dp"
        android:layout_height="53dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43" />

    <EditText
        android:id="@+id/editText_celsius"
        android:layout_width="227dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Insira a temperatura em C"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/button_aperte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>