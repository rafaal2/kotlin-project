<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProdutoActivity"
    android:background="#D3D3D3"
    android:backgroundTint="#D3D3D3"
    android:padding="24dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonCancelar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/main_button"
        android:text="Cancelar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Produto"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Nome atual:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textNomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editTextNovoNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o novo nome"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade atual:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewQuantidader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editTextNovaQuantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira a nova Quantidade"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço atual:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewPrecor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editTextNovoPreco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o novo Preço"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonEditarProduto"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:background="@drawable/main_button"
        android:fontFamily="@font/poppins_medium"
        android:text="Confirmar" />

    <Button
        android:id="@+id/buttonExcluirProduto"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:background="@drawable/main_button"
        android:fontFamily="@font/poppins_medium"
        android:text="Excluir" />

</LinearLayout>
